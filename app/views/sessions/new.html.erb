<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/login" method="post">
        <div class="form-outline mb-4">
            <%= bootstrap_form_for(:session, url: login_path) do |f| %>
                <%= f.email_field :email, label: 'Email', class: 'form-control' %>
                <%= f.password_field :password, label: 'Password', class: 'form-control' %>
                <%= f.primary 'Log in', class: 'btn btn-primary' %>
            <% end %>
        <div class="text-center">
          <p>Not a member? <%= link_to "Register", signup_path %></p>
        </div>
      </form>
    </div>
  </div>
</div>

