<% provide(:title, "Log in") %>
<br/>
<h1>Log in</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(url: login_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :email, 'Email address', class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
        <div class="form-group">
          <%= form.label :password, 'Password', class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-check">
          <%= form.check_box :remember_me, { class: 'form-check-input', id: 'rememberMe' }, '1', '0' %>
          <%= form.label :remember_me, 'Remember me', class: 'form-check-label', for: 'rememberMe' %>
        </div>
        <%= form.submit 'Log in', class: 'btn btn-primary' %>
        <div class="text-center">
            <p>Not a member? <%= link_to "Register", signup_path %></p>
          </div>
      <% end %> 
    </div>
  </div>
</div>

